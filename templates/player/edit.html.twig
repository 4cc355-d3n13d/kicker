{% extends "layout.html.twig" %}

{% block title %}Edit player{% endblock %}

{% block content %}
    <h2>Edit player</h2>
    <form method="POST">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" id="name" placeholder="Enter name" name="name" value="{{ player.name }}">
                </div>
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
{% endblock %}
