{% extends "layout.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <h2>Recent results</h2>

        <table class="table table-sm table-stripped">
            <thead class="thead-default">
            <tr>
                <th>Win</th>
                <th>Lose</th>
                <th>Time</th>
            </tr>
            </thead>
            {% for result in results %}
                <tr>
                    <td>
                        {% for player in result.winners %}
                            <span class="winner"><i class="fa fa-trophy"></i> <a href="/player/{{ player.id }}">{{ player.name }}</a></span>
                        {% endfor %}
                    </td>
                    <td>
                        {% for player in result.losers %}
                            <span class="loser"><a href="/player/{{ player.id }}">{{ player.name }}</a></span>
                        {% endfor %}
                    </td>
                    <td>{{ result.playedAt|date('Y-m-d H:i') }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="col-md-4">
        <h2>Players</h2>

        <table class="table table-sm table-stripped">
            <thead class="thead-default"><tr>
                <th>Player</th>
                <th>Score</th>
            </tr></thead>
            {% for player in players %}
                <tr>
                    <td>
                        <i class="fa fa-user-circle-o"></i>
                        <a href="/player/{{ player.id }}">{{ player.name }}</a>
                    </td>
                    <td>
                        <strong>{{ player.score }}</strong>
                    </td>
                </tr>
            {% endfor %}
        </table>

    </div>
</div>
{% endblock %}
