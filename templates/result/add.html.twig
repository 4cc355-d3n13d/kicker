{% extends "layout.html.twig" %}

{% block title %}Add result{% endblock %}

{% block content %}
    <h2>Add result</h2>
    <form>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Winners</label>
                    <select multiple class="form-control" id="exampleFormControlSelect1">
                        {% for player in players %}
                            <option value="{{ player.id }}">{{ player.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Losers</label>
                    <select multiple class="form-control" id="exampleFormControlSelect1">
                        {% for player in players %}
                            <option value="{{ player.id }}">{{ player.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
